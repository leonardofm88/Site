<body>
    <div class="container">
        <h1>Filtro de Ética de Conteúdo</h1>
        <p>Este filtro censura palavras ofensivas e gírias comuns em Português (Brasil).</p>

        <div class="card">
            <h2>Comentário Original:</h2>
            <textarea id="textoOriginal" placeholder="Digite seu comentário aqui..."></textarea>
            <button onclick="aplicarFiltro()">Aplicar Filtro</button>
        </div>

        <div class="card resultado">
            <h2>Conteúdo Moderado:</h2>
            <p id="textoFiltrado">O texto moderado aparecerá aqui.</p>
        </div>

        <div class="aviso">
            <strong>Aviso:</strong> A detecção de todas as variações de xingamentos é extremamente complexa. Este filtro é um exemplo básico e utiliza Expressões Regulares (Regex) e normalização para pegar gírias e leetspeak simples.
        </div>
    </div>

    <script>
        const PALAVRAS_OFENSIVAS = [
    /c\s*[aã4@]\s*r\s*[aã4@]\s*lh\s*[oô0]/gi,    // caralho
    /p\s*[oô0]\s*rr\s*[aã4@]/gi,                // porra
    /m\s*[eé3]\s*r\s*d\s*[aã4@]/gi,             // merda
    /f\s*[oô0]\s*d\s*[eao34@]/gi,                // foda, fode, fodeu
    /p\s*[uú]\s*t\s*[aã4@]/gi,                   // puta
    /c\s*[uú]\s*z\s*[aã4@]\s*[oô0]/gi,           // cuzão
    /b\s*[uú]\s*c\s*[eé3]\s*t\s*[aã4@]/gi,       // buceta
    /v\s*[ií1]\s*[aã4@]\s*d\s*[oô0]/gi,           // viado
    /\bvt\s*n\s*c\b/gi,                           // vtnc
    /\bv\s*s\s*f\b/gi,                            // vsf
    /\bf\s*d\s*p\b/gi,                            // fdp
    /\bp\s*q\s*p\b/gi,                            // pqp
    /\bbab\s*[aã4@]\s*c\s*[aã4@]\b/gi,            // babaca
    /\bidi\s*[oô0]\s*t\s*[aã4@]\b/gi,             // idiota

    // Novas gírias que você pediu:
    /\bb\s*c\s*t\b/gi,       // bct
    /\bp\s*r\s*r\b/gi,       // prr
    /\bc\s*z\b/gi,           // cz
    /\bk\s*7\b/gi,           // k7
    /\bk\s*r\s*l\s*h\b/gi,   // krlh
    /\bc\s*r\s*l\s*h\b/gi,   // crlh
    /\bf\s*d\b/gi,           // fd
    /\bf\s*d\s*s\b/gi,       // fds
    /\bm\s*r\s*d\b/gi,       // mrd
    /\bv\s*e\s*a\s*d\s*o\b/gi, // veado
    /\bv\s*i\s*a\s*d\s*o\b/gi, // viado (mais explícito)
    /\bvd\b/gi,              // vd
    /\bp\s*t\b/gi,           // pt
    /\bk\s*r\s*a\s*i\b/gi,   // krai
    /\bc\s*r\s*a\s*i\b/gi,   // crai
    /\bv\s*s\s*f\s*d\b/gi,   // vsfd
    /\bp\s*q\s*p\b/gi,       // p q p
    /\bi\s*m\s*b\s*e\s*c\s*i\s*l\b/gi,  // imbecil
    /\bc\s*a\s*r\s*a\s*i\b/gi            // caraio
];

        function normalizarTextoParaBusca(texto) {
            let normalizado = texto.toLowerCase();
            normalizado = normalizado.replace(/0/g, 'o')
                                     .replace(/1/g, 'i')
                                     .replace(/3/g, 'e')
                                     .replace(/4/g, 'a')
                                     .replace(/5/g, 's')
                                     .replace(/7/g, 't')
                                     .replace(/@/g, 'a')
                                     .replace(/\$/g, 's');
            normalizado = normalizado.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
            return normalizado;
        }

        function aplicarFiltro() {
            const textarea = document.getElementById("textoOriginal");
            const resultadoDiv = document.getElementById("textoFiltrado");
            let textoOriginal = textarea.value;
            let textoCensurado = textoOriginal;

            if (textoOriginal.trim() === "") {
                resultadoDiv.textContent = "Por favor, digite algum texto para aplicar o filtro.";
                resultadoDiv.style.color = "#000000";
                return;
            }

            resultadoDiv.style.color = "#dc3545";

            PALAVRAS_OFENSIVAS.forEach(regex => {
                textoCensurado = textoCensurado.replace(regex, (matchOriginal) => {
                    return '#'.repeat(matchOriginal.length);
                });
            });

            if (textoCensurado === textoOriginal) {
                resultadoDiv.textContent = textoOriginal;
                resultadoDiv.style.color = "#000000";
            } else {
                resultadoDiv.textContent = textoCensurado;
            }
        }
    </script>
</body>
